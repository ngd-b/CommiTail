{
  "name": "commitail",
  "displayName": "CommiTail",
  "description": "Smart Git commit message appender for VS Code",
  "version": "0.0.2",
  "icon": "media/icon.png",
  "repository": "https://github.com/ngd-b/CommiTail",
  "publisher": "hboot",
  "engines": {
    "vscode": "^1.78.0"
  },
  "main": "./out/extension.js",
  "activationEvents": [
    "onCommand:commitail.commitWithAppend",
    "onCommand:commitail.createConfig"
  ],
  "scripts": {
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "test": "jest"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^20.19.1",
    "@types/vscode": "^1.88.0",
    "jest": "^30.0.0",
    "ts-jest": "^29.4.0",
    "typescript": "^5.1.3"
  },
  "contributes": {
    "commands": [
      {
        "command": "commitail.commitWithAppend",
        "title": "CommiTail: Commit with Append",
        "category": "Git",
        "icon": {
          "light": "media/icon.png",
          "dark": "media/icon.png"
        }
      },
      {
        "command": "commitail.createConfig",
        "title": "CommiTail: Create Default Configuration",
        "category": "Git"
      }
    ],
    "menus": {
      "commandPalette": [
        {
          "command": "commitail.commitWithAppend",
          "when": "scmProvider == git"
        },
        {
          "command": "commitail.createConfig",
          "when": "workspaceFolderCount >= 1"
        }
      ],
      "scm/title": [
        {
          "command": "commitail.commitWithAppend",
          "when": "scmProvider == git",
          "group": "2_commit"
        }
      ]
    }
  },
  "dependencies": {
    "vsce": "^2.15.0"
  }
}
